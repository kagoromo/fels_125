  <span class="categories"><%= @category.title %></span>
  <p class="description"><%= @category.description %></p>
</div>

<div class="row">
  <div class="col-md-6">
    <%= render "admin/words/form" %>
  </div>
  
  <div class="col-md-6">
    <%= render @words %>
    <%= will_paginate @words %>
  </div>
</div>
