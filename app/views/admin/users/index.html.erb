<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
  </aside>
  <aside class="col-md-8">
    <section class="stats">
      <% @users.each do |user| %>
        <%= render "shared/stats", user: user unless user.admin? %>
      <% end %>
    </section>
  </aside>
</div>
