<% provide title: @word.category.title %>
<% provide :button_text, t("finish") %>
<h1><%= t "word_update" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>
      <div class="form-group">
        <%= f.label t "question" %>
        <%= f.text_field :question, class: "form-control" %>

        <%= f.hidden_field :_destroy %>

        <%= f.label t "answers" %>

        <%= f.fields_for :answers do |answers_for_form| %>
          <%= render "admin/words/answer_fields", f: answers_for_form %>
        <% end %>

        <%= link_to_add_fields t("add_answer"), f, :answers %>
      </div>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
